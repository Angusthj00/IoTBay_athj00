<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>controllers.ConnServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ItemManagementController</servlet-name>
        <servlet-class>controllers.ItemManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchItemController</servlet-name>
        <servlet-class>controllers.SearchItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SortItemController</servlet-name>
        <servlet-class>controllers.SortItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemController</servlet-name>
        <servlet-class>controllers.AddItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteItemController</servlet-name>
        <servlet-class>controllers.DeleteItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditItemController</servlet-name>
        <servlet-class>controllers.EditItemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemManagementController</servlet-name>
        <url-pattern>/ItemManagementController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchItemController</servlet-name>
        <url-pattern>/SearchItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SortItemController</servlet-name>
        <url-pattern>/SortItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemController</servlet-name>
        <url-pattern>/AddItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteItemController</servlet-name>
        <url-pattern>/DeleteItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditItemController</servlet-name>
        <url-pattern>/EditItemController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
